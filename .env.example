DEVELOPMENT=true
NEXT_PUBLIC_SIGNUM_DEFAULT_NODE=https://europe3.testnet.signum.network
NEXT_PUBLIC_SIGNUM_RELIABLE_NODES=
NEXT_PUBLIC_SIGNUM_NETWORK=Signum-TESTNET
NEXT_PUBLIC_SIGNUM_EXPLORER=https://t-chain.signum.network

# SERVER SIDE **SENSITIVE** DATA

# NFT Service API (optional)
# Leave blank to disable NFT-related achievements
# NFT counts will return 0 if not configured
# To request access, open an issue at: https://github.com/signum-network/signarank/issues
NEXT_SERVER_NFT_SERVICE_API_HOST=
NEXT_SERVER_NFT_SERVICE_API_KEY=

DATABASE_URL=<pooled-db-url>
DIRECT_DATABASE_URL=<non-pooled-db-url>

# Cache configuration (in seconds)
# How long to cache calculated scores before recalculating from blockchain
# Recommended: 1800 (30 minutes) for cost optimization
# Can be reduced to 240 (4 minutes = 1 block time) for maximum freshness
NEXT_SERVER_CACHE_TTL_SECONDS=1800

# REQUIRED: Admin endpoints authentication secret (for manual access)
# This secret is used to manually call admin API endpoints
# Generate a strong random secret (e.g., using: openssl rand -base64 32)
# Usage: curl -H "Authorization: Bearer <secret>" https://your-app.vercel.app/api/admin/prune
NEXT_SERVER_ADMIN_SECRET=<random-secret-for-admin-endpoints>

# AUTOMATIC: Vercel cron authentication (set automatically by Vercel)
# Vercel automatically provides this secret for cron jobs in production
# You don't need to set this manually - Vercel handles it
# CRON_SECRET=<automatically-set-by-vercel>
